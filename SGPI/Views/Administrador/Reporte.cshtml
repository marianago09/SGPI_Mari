
@model SGPI.Models.Usuario

@{
    ViewData["Title"] = "Reporte.";
    Layout = "_LayoutADMINISTRADOR";
}

<div class="container">




    <div class="row">
        <div class="col-sm-4 justify-content-md-center align-items-center ">
            <h4> Tipo de Documento </h4>

            @Html.DropDownList("IdDoc", new SelectList(ViewBag.documento, "IdDoc", "TipoDocumento"), new{@class = "form-control dropdown"})

        </div>
        <br />

        <div class="col-sm-4 justify-content-md-center align-items-center">
            <form>
                <h4> Numero de Documento </h4>
                <div class="col ">
                   <input asp-for="NumeroDocumento" type="text" class="form-control col" id="Documentotxt" placeholder="Numero De Documento">
                </div>
            </form>
        </div>

        <br> <br />
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Primer Apellido</th>
                    <th>Segundo Apellido</th>
                    <th>Genero</th>
                    <th>Documento</th>
                    <th>Programa</th>
                    <th>Rol</th>
                    <th>Correo Electrónico</th>
                </tr>
            </thead>
            <tbody>
            
                <tr>
                    <td> </td>
                    <td> </td>
                    <td> </td>
                    <td> </td>
                    <td> </td>
                    <td> </td>
                    <td> </td>
                    <td> </td>
                </tr>
            </tbody>
        </table>


        <div class="col-lg-6 offset-lg-5">
            <button type="button" class="btn btn-dark">Generar Reporte</button>
</div>
</div>
</div>