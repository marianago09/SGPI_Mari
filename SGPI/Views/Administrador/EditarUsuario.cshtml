@model SGPI.Models.Usuario

@{
    ViewData["Title"] = "Editar usuario.";
    Layout = "_LayoutADMINISTRADOR";
}

<div class="container">
    <div class="row">
        <div class="col">
            <h1 class="display-4">Editar usuario.</h1>
        </div>
        <div class="col">
            <br />
            <a href="/Administrador/Login"><h4 class="text-right">Cerrar sesión.</h4></a>
        </div>
    </div>
</div>

<form method="post">

    <div class="row">

        <div class="col-md-4 mb-4">
            <div class="form-outline">               
                <h4> Tipo de Documento </h4>
                    @Html.DropDownList("IdDoc", new SelectList(ViewBag.documento, "IdDoc", "TipoDocumento"), new{@class = "form-control dropdown"})
            </div>
        </div>
        <br>


        <div class="col-md-4 mb-4">
            <div class="form-outline">
                <h4> Número de Documento </h4>
                    <input asp-for ="NumeroDocumento" type="text" class="form-control" id="Documentotxt" placeholder="Numero De Documento">
            </div>
        </div>


        <div class="col-md-4 mb-4">
            <div class="form-outline">
                <h4> Seleccione su sexo: </h4>
                    @Html.DropDownList("IdGenero", new SelectList(ViewBag.genero, "IdGenero", "Genero1"), new{@class="form-control dropdown"})
            </div>
        </div>

    </div>


    <div class="row">

        <div class="col-md-4 mb-4">
            <div class="form-outline">
                <h4> Nombre </h4>
                    <input asp-for="PrimerNombre" type=text class="form-control" id="Nombretxt" placeholder="Ingrese su primer nombre">
            </div>
        </div>


        <div class="col-md-4 mb-4">
            <div class="form-outline">
                <h4> Segundo Nombre </h4>
                    <input asp-for="SegundoNombre" type=text class="form-control col" id="Apellido1txt" placeholder="Ingrese su segundo nombre">
            </div>
        </div>


        <div class="col-md-4 mb-4">
            <div class="form-outline">
                <h4> Primer Apellido </h4>
                    <input asp-for="PrimerApellido" type=text class="form-control col" id="Apellido1txt" placeholder="Ingrese su primer apellido">
            </div>
        </div>

    </div>


    <div class="row">

        <div class="col-md-4 mb-4">
            <div class="form-outline">
                <h4> Segundo Apellido </h4>
                    <input asp-for="SegundoApellido" type=text class="form-control col" id="Apellido2" placeholder="Ingrese su segundo apellido">
            </div>
        </div>


        <div class="col-md-4 mb-4">
            <div class="form-outline">
                <h4> Contraseña </h4>
                    <input asp-for="Password" type="password" class="form-control col" id="Passwordtxt" placeholder="Ingrese su contraseña">
            </div>
        </div>


        <div class="col-md-4 mb-4">
            <div class="form-outline">
                <h4> Correo Electronico </h4>
                    <input asp-for="Email" type="email" class="form-control col" id="Correotxt" placeholder="Ingrese Su Correo">
            </div>
        </div>

    </div>


    <div class="row">

        <div class="col-md-4 mb-4">
            <div class="form-outline">
                <h4> Roles </h4>
                    @Html.DropDownList("IdRol", new SelectList(ViewBag.rol, "IdRol", "Rol1"), new{@class = "form-control dropdown"})
            </div>
        </div>


        <div class="col-md-4 mb-4">
            <div class="form-outline">
                <h4> Programas </h4>
                    @Html.DropDownList("IdPrograma", new SelectList(ViewBag.programa, "IdPrograma", "Programa1"), new{@class = "form-control dropdown"})
            </div>
        </div>

    </div>

    <br />


        <button type="submit" class="btn text-white" style="background-color: #FFE089">Editar Usuario</button>
</form>
